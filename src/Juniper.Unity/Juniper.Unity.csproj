  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.Unity</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <Authors>Sean T. McBeth</Authors>
