<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.props" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.Unity</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <Platforms>AnyCPU</Platforms>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <ItemGroup>
    <Reference Include="System.IO.Compression" />
    <ProjectReference Include="..\Juniper.Azure\Juniper.Azure.csproj" />
    <ProjectReference Include="..\Juniper.GoogleMaps\Juniper.GoogleMaps.csproj" />
    <ProjectReference Include="..\Juniper.HjgPngcs\Juniper.HjgPngcs.csproj" />
    <ProjectReference Include="..\Juniper.LibJpeg.NET\Juniper.LibJpeg.NET.csproj" />
    <ProjectReference Include="..\Juniper.NeuroSky\Juniper.NeuroSky.csproj" />
    <ProjectReference Include="..\Juniper.NLayer.NAudioSupport\Juniper.NLayer.NAudioSupport.csproj" />
    <ProjectReference Include="..\Juniper.OpenWeatherMap\Juniper.OpenWeatherMap.csproj" />
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
    <ProjectReference Include="..\Juniper.Client\Juniper.Client.csproj" />
    <Reference Include="$(UNITY_ROOT)\Editor\Data\Managed\UnityEngine.dll" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)|$(TargetFramework)'=='Release|net472'">
    <Exec ContinueOnError="true" Command="XCOPY &quot;$(TargetDir)*&quot; &quot;$(ProjectDir)..\Juniper\Plugins\Juniper&quot; /exclude:$(ProjectDir)excludeFromUnity.txt /C /I /F /Y" />
  </Target>

</Project>
