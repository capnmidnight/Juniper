<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.Unity</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <Platforms>AnyCPU</Platforms>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec ContinueOnError="true" Command="XCOPY &quot;$(TargetDir)*&quot; &quot;$(SolutionDir)Juniper\Plugins\Juniper&quot; /exclude:$(ProjectDir)excludeFromUnity.txt /C /I /F /Y" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
    <ProjectReference Include="..\Juniper.Client\Juniper.Client.csproj" />
  </ItemGroup>

</Project>
