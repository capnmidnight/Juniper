<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <AssemblyName>Juniper.YouTubeDLP</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="yt-dlp" />
    <None Remove="yt-dlp.exe" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="yt-dlp">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="yt-dlp.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Processes\Juniper.Processes.csproj" />
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
  </ItemGroup>

</Project>