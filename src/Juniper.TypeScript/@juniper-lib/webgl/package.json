{
  "version": "1.0.0",
  "name": "@juniper-lib/webgl",
  "private": true,
  "type": "module",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "ts-build": "tsc -b",
    "copy-assets": "pwsh -Command \"foreach($type in @(\\\"*.glsl\\\", \\\"*.vert\\\", \\\"*.frag\\\", \\\"*.css\\\")) { Get-ChildItem .\\src\\* -Attribute Directory | Copy-Item -Destination .\\dist -Recurse -Filter $type -Force }\"",
    "build": "npm run ts-build && npm run copy-assets",
    "juniper-build": "npm run build"
  },
  "dependencies": {
    "@juniper-lib/collections": "file:../collections",
    "@juniper-lib/dom": "file:../dom",
    "@juniper-lib/events": "file:../events",
    "@juniper-lib/graphics2d": "file:../graphics2d",
    "@juniper-lib/progress": "file:../progress",
    "@juniper-lib/tslib": "file:../tslib",
    "gl-matrix": "3.4.3"
  },
  "devDependencies": {
    "@types/offscreencanvas": "2019.7.0",
    "@types/webxr": "0.5.4"
  }
}